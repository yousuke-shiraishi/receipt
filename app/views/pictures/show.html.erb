
<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>
<% if @picture.user_id == current_user %>
<%= link_to '編集', edit_picture_path(@picture)  , class: "btn btn-xs btn-primary"%> |

<%end%>
<%= link_to '戻る', pictures_path , class: "btn btn-xs btn-primary" %>

<% unless @picture.user == current_user %>

  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(picture_id: @picture.id), method: :delete, class: 'btn btn-xs btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-xs,btn-prymary' %>
  <% end %>
<% end %>
